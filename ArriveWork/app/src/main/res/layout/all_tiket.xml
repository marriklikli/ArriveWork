<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_lines"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Название"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/image_lines"
        app:layout_constraintStart_toEndOf="@+id/image_lines"
        app:layout_constraintTop_toTopOf="@+id/image_lines" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/image_lines"
        app:layout_constraintTop_toTopOf="@+id/image_lines" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Цена"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/air_terminals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аэропорт"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/air_terminals2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аэропорт"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/air_terminals"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Время в пути"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/transfers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Без пересадок"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/air_terminals2"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/time_way" />
</androidx.constraintlayout.widget.ConstraintLayout>